@model IEnumerable<NewBTL.Models.Sanpham>
@using NewBTL.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh mục các sản phẩm</h2>

<p>
    <a asp-action="ThemSanPhamMoi">Create New</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-active">
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá tiền
            </th>
            <th>
                Số lượng
            </th>
            <th>
               Mô tả
            </th>
            <th>
                Thẻ sim
            </th>
            <th>
                Bộ nhớ trong
            </th>
            <th>
                Ram
            </th>
            <th>
                Ảnh bìa
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-active">
             <td>
                @Html.DisplayFor(modelItem => item.Masp)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tensp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giatien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thesim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonhotrong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ram)
            </td>
                <td>
                    @if (item.Anhbia != null)
                    {
                        <img style="width: 50px; height: 50px" src="@(item.Anhbia.StartsWith("/") ? item.Anhbia : "/Images/files/" + item.Anhbia)" />
                    }
                </td>
            <td>
                <a asp-action="SuaSanPham" asp-route-maSP="@item.Masp">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Masp">Details</a> |
                <a asp-action="XoaSanPham" asp-route-maSP="@item.Masp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
